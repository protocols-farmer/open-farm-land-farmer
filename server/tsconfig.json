{
  "compilerOptions": {
    // --- Target and Libraries ---
    "target": "ES2022",
    "lib": ["es2022"],
    "useDefineForClassFields": true,

    // --- Modules ---
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    // --- Emit ---
    "outDir": "dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,

    // --- Interoperability ---
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // --- Strictness & Code Quality (Core of a scalable app's safety net) ---
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,

    // --- Advanced & Build Optimizations ---
    "skipLibCheck": true,
    "isolatedModules": true,

    // --- Path Aliases (Highly recommended for larger projects) ---
    "baseUrl": "./",
    "paths": {
      // Example: import foo from '@/components/foo' instead of '../../components/foo'
      "@/*": ["src/*"],
      // Example: import { PrismaClient } from '@prisma/client' instead of '../../generated/prisma/client'
      "@prisma-client": ["src/generated/prisma/client.js"]
      // You can add more specific paths if needed:
      // "@components/*": ["src/components/*"],
      // "@utils/*": ["src/utils/*"],
    },

    // --- Type Acquisition ---
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
